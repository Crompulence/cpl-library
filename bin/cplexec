if len(arg) > 1:
    args_CFD = arg[1:]
else:
    args_CFD = []
nprocs_MD = args['md'][0]
arg = args['md'][1].split(" ")
exec_MD = arg[0]
if len(arg) > 1:
    args_MD = arg[1:]
else:
    args_MD = []
#nprocs_CFD = args['cfd'][0]
