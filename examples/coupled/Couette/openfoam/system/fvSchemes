FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         backward;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,U)      Gauss linear;
    div(phib,Ub)    Gauss linear;
    div(((nub*2)*dev(symm(grad(Ub))))) Gauss linear;

}

laplacianSchemes
{
    default         none;
    laplacian((rhob*(1|A(U))),p) Gauss linear corrected;
    laplacian((nub*beta),Ub) Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default         no;
    p;
}


// ************************************************************************* //
