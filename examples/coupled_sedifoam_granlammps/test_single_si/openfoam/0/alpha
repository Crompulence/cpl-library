FoamFile
{
	version	 2.0;
	format	 ascii;
	class	 volScalarField;
	object	 alpha;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions 	 [0 0 0 0 0 0 0];

internalField 	 uniform 0;

boundaryField
{
	top
	{
		type zeroGradient;
	}
	
	bottom
	{
		type zeroGradient;
	}
	
	streamwiseIn
	{
		type cyclic;
		neighbourPatch streamwiseOut;
	}
	
	streamwiseOut
	{
		type cyclic;
		neighbourPatch streamwiseIn;
	}
	
	front
	{
		type cyclic;
		neighbourPatch back;
	}
	
	back
	{
		type cyclic;
		neighbourPatch front;
	}
	
}
// ************************************************************************* //
